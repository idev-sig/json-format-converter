{
  "manifest_version": 3,
  "name": "JSON Format Converter",
  "version": "0.1.0",
  "description": "Professional JSON, JSONC, and JSON5 converter with advanced editing features, comment preservation, and multi-language support",
  "author": "Jetsung Chan",
  "homepage_url": "https://github.com/idev-sig/json-format-converter",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_title": "JSON Format Converter"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
